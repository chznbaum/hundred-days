<h1>Logs</h1>

<table>
  <thead>
    <tr>
      <th>Round</th>
      <th>Day</th>
      <th>Content</th>
      <th>Status</th>
      <th>Motivation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.round %></td>
        <td><%= log.day %></td>
        <td><%= log.content %></td>
        <td><%= log.status %></td>
        <td><%= log.motivation %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) if logged_in?(:site_admin) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
